<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="fill_parent"
			  android:layout_height="wrap_content"
			  android:orientation="vertical">

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:weightSum="10">

		<View
			android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:layout_weight="5"/>

		<TextView
			android:background="@drawable/option_background"
			android:id="@+id/plannerCalenderYearTextView"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_weight="5"
			android:drawableRight="@drawable/white_dots"
			android:paddingBottom="16dp"
			android:paddingLeft="8dp"
			android:paddingRight="12dp"
			android:paddingTop="16dp"
			android:text="@string/monthly_view"
			android:textColor="@color/text_white"
			android:textSize="14sp"/>
	</LinearLayout>

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:weightSum="10"
		android:layout_marginTop="-1dp">

		<View
			android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:layout_weight="5"/>

		<TextView
			android:background="@drawable/option_background"
			android:id="@+id/plannerScannerTextView"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_weight="5"
			android:drawableRight="@drawable/white_dots"
			android:paddingBottom="16dp"
			android:paddingLeft="8dp"
			android:paddingRight="12dp"
			android:paddingTop="16dp"
			android:text="@string/scanner"
			android:textColor="@color/text_white"
			android:textSize="14sp"/>


	</LinearLayout>

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginTop="-1dp"
		android:weightSum="10">

		<View
			android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:layout_weight="5"/>

		<TextView
			android:background="@drawable/option_background"
			android:id="@+id/plannerAddCustomEvenTextView"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_weight="5"
			android:drawableRight="@drawable/white_dots"
			android:paddingBottom="16dp"
			android:paddingLeft="8dp"
			android:paddingRight="12dp"
			android:paddingTop="16dp"
			android:text="@string/add_event"
			android:textColor="@color/text_white"
			android:textSize="14sp"/>


	</LinearLayout>

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginTop="-1dp"
		android:weightSum="10">

		<View
			android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:layout_weight="5"/>

		<TextView
			android:background="@drawable/option_background"
			android:id="@+id/plannerMyPlanInputTextView"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_weight="5"
			android:drawableRight="@drawable/white_dots"
			android:paddingBottom="16dp"
			android:paddingLeft="8dp"
			android:paddingRight="12dp"
			android:paddingTop="16dp"
			android:text="@string/my_planner_inputs"
			android:textColor="@color/text_white"
			android:textSize="14sp"/>


	</LinearLayout>


</LinearLayout>